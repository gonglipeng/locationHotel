<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.administrator.locationhotel.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_background"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/picpic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_landscape"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="肥西县桃花镇风景区"
                        android:textColor="@color/textBigColor"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/locate" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:text="4.6km"
                        android:textSize="9sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_abstract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="13dp"
                    android:singleLine="false"
                    android:text="肥西县桃花镇风景哈哈哈哈lalalalllalassssslallal哈哈啦啦啦啦啦啦啦啦啦啦爱啦啦啦啦啦你在哪"
                    android:textColor="@color/textContentColor"
                    android:textSize="9sp" />


                <include
                    layout="@layout/line_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">

                <include layout="@layout/line_view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/location_hotel_09" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="体验攻略"
                        android:textColor="@color/textBigColor"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_scenic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="肥西县桃花镇风景区哈哈哈啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈想嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻"
                    android:textColor="@color/textContentColor"
                    android:textSize="9sp" />

                <ImageView
                    android:id="@+id/iv_scenic_down"
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_map"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/ll_time">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:text="时间"
                        android:textColor="@color/textDownColor"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_time_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                        android:textColor="@color/textContentColor"
                        android:textSize="10sp"
                        android:layout_marginBottom="10dp"
                        />

                    <ImageView
                        android:id="@+id/iv_time_down"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/downlist" />
                </LinearLayout>

                <include layout="@layout/line_view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/ll_location">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:text="地址"
                        android:textColor="@color/textDownColor"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_location_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                        android:textColor="@color/textContentColor"
                        android:textSize="10sp"
                        android:layout_marginBottom="10dp"
                        />

                    <ImageView
                        android:id="@+id/iv_location_down"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/downlist" />
                </LinearLayout>

                <include layout="@layout/line_view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/ll_jiaotong"
                    >

                    <TextView
                        android:id="@+id/tv_jiaotong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:text="交通"
                        android:textColor="@color/textDownColor"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_jiaotong_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_marginBottom="10dp"
                        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                        android:textColor="@color/textContentColor"
                        android:textSize="10sp"

                        />

                    <ImageView
                        android:id="@+id/iv_jiaotong_down"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/downlist" />
                </LinearLayout>

                <include layout="@layout/line_view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:text="报名"
                        android:textColor="@color/textDownColor"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_ticket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="成人票"
                        android:textColor="@color/textContentColor"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:text="$110"
                        android:textColor="@color/textDownColor"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/iv_apply_down"
                        android:layout_width="53dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_yuding_selector"
                        android:gravity="center"
                        android:text="预定"
                        android:textColor="@color/textWriteColor"
                        android:textSize="12sp" />


                </LinearLayout>

                <include layout="@layout/line_view" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_3"
                android:layout_marginTop="9dp"
                android:orientation="vertical">

                <include layout="@layout/line_view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="11dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dianping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="11dp"
                        android:layout_marginTop="14dp"
                        android:text="来自158位游客的点评"
                        android:textSize="14dp" />

                    <include layout="@layout/line_view" />

                    <com.example.administrator.locationhotel.view.MyListView
                        android:id="@+id/lv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        />

                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_shape"
                        android:layerType="software" />-->

                    <LinearLayout
                        android:id="@+id/ll_listview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/tv_look"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/dianping_shape"
                        android:padding="6dp"
                        android:text="查看全部158位评论"
                        android:textColor="@color/dianpingColor" />
                </LinearLayout>

                <include layout="@layout/line_view" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_4"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="9dp"
                android:orientation="vertical">

                <include layout="@layout/line_view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="附近景点"
                        android:textColor="@color/textBigColor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="查看更多"
                        android:textColor="@color/textContentColor"
                        android:textSize="10sp" />

                </LinearLayout>

                <include
                    layout="@layout/line_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="11dp" />

                <com.example.administrator.locationhotel.view.MyGridView
                    android:id="@+id/gv_scenic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:numColumns="4"
                    android:layout_marginLeft="8dp"
                    ></com.example.administrator.locationhotel.view.MyGridView>
            </LinearLayout>

            <include
                android:id="@+id/line"
                layout="@layout/line_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_5"
                android:layout_marginTop="9dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/line"
                android:layout_marginTop="9dp"
                android:background="@color/backgroundColor">

                <include layout="@layout/line_view" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_query"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/written" />

                    <TextView
                        android:id="@+id/tv_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="写评论"
                        android:textColor="@color/writeColor"
                        android:textSize="17dp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </com.example.administrator.locationhotel.view.MyScrollView>
</RelativeLayout>
